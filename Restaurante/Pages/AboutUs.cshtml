@model Restaurante.Pages.AboutUsModel
@{
}
<html>
    <head>
    <link rel="stylesheet" href="~/css/aboutus.styles.min.css" />
    <link rel="stylesheet" href="~/css/AboutUs.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kaushan+Script&amp;display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="text-uppercase">About Us</h2>
                <h3 class="text-muted section-subheading" >Bearcat Pizza</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="list-group timeline">
                    <li class="list-group-item">
                        <div class="timeline-image"><img class="rounded-circle img-fluid" src="./Images/about/1.jpg"></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>2018-2020</h4>
                                <h4 class="subheading">Our Humble Beginnings</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">The idea of starting a restuarant was formed when we were studying at the University of Cincinnati.</p>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item timeline-inverted">
                        <div class="timeline-image"><img class="rounded-circle img-fluid" src="./Images/about/second.jpg"></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Dec 2020</h4>
                                <h4 class="subheading">A Pizza Restuarant is Born</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">We moved into a new space, purchased kitchen equipment and we have started our restaurant and made a big step in achieving our dream!</p>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="timeline-image"><img class="rounded-circle img-fluid" src="./Images/about/3.jpg"></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Jan 2021</h4>
                                <h4 class="subheading">Our Revenue Growing</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">The sales of pizza has hit 500K dollars a year. we are planning to open a new restaurant!</p>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item timeline-inverted">
                        <div class="timeline-image"><img class="rounded-circle img-fluid" src="./Images/about/4.jpg"></div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Jan 2022</h4>
                                <h4 class="subheading">Phase Two Expansion</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted"> The team size has grown from 15 to 30 members!</p>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item timeline-inverted">
                        <div class="timeline-image">
                            <h4>Be Part<br>&nbsp;Of Our<br>&nbsp;Story!</h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <section class="bg-light" id="team">
        <div class="container">
            <div class="row">
                <h2 class="text-center">Our Team</h2>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="rounded-circle mx-auto" src="./Images/team/1.jpg">
                        <h4>Kay Garland</h4>
                        <p class="text-muted">Founder</p>
                        <ul class="list-inline social-buttons">
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="rounded-circle mx-auto" src="./Images/team/2.jpg">
                        <h4>Larry Parker</h4>
                        <p class="text-muted">Co-Founder</p>
                        <ul class="list-inline social-buttons">
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img class="rounded-circle mx-auto" src="./Images/team/3.jpg">
                        <h4>Diana Pertersen</h4>
                        <p class="text-muted">HR Lead</p>
                        <ul class="list-inline social-buttons">
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </body>
</html>
