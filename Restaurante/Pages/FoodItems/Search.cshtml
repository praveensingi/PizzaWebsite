@page
@model Restaurante.Pages.FoodItems.SearchModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div>
    <div>
        <form action="" method="get" class="form-inline">
            <input asp-for="Query" class="form-control mr-sm-2 mb-2" placeholder="search food item" />
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
    </div>
</div>

@if (Model.SearchCompleted)
{
    if (Model.FoodItem.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodItem[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodItem[0].Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodItem[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodItem[0].Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FoodItem)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <div class="row">
            <div class="col">
                <div class="alert alert-info">
                    We are sorry! No food item matched your term <strong> @Model.Query</strong>
                </div>
            </div>
        </div>
    }
}