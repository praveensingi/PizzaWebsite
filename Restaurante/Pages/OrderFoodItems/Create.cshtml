@page
@model Restaurante.Pages.OrderFoodItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order for Food Item</h1>

<h4>OrderFoodItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderFoodItem.OrderId" class="control-label"></label>
                <select asp-for="OrderFoodItem.OrderId" class ="form-control" asp-items="ViewBag.OrderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderFoodItem.FoodItemId" class="control-label"></label>
                <select asp-for="OrderFoodItem.FoodItemId" class ="form-control" asp-items="ViewBag.FoodItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderFoodItem.Quantity" class="control-label"></label>
                <input asp-for="OrderFoodItem.Quantity" class="form-control" />
                <span asp-validation-for="OrderFoodItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
