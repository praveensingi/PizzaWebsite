@page
@model Restaurante.Pages.OrderFoodItems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Order for Food Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderFoodItem.Id" />
            <div class="form-group">
                <label asp-for="OrderFoodItem.OrderId" class="control-label"></label>
                <select asp-for="OrderFoodItem.OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="OrderFoodItem.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderFoodItem.FoodItemId" class="control-label"></label>
                <select asp-for="OrderFoodItem.FoodItemId" class="form-control" asp-items="ViewBag.FoodItemId"></select>
                <span asp-validation-for="OrderFoodItem.FoodItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderFoodItem.Quantity" class="control-label"></label>
                <input asp-for="OrderFoodItem.Quantity" class="form-control" />
                <span asp-validation-for="OrderFoodItem.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
